<base:RegionContextAwareUserControl x:Class="Hymperia.Facade.Views.Editeur.PrixAnalyse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prism="http://prismlibrary.com/"
    xmlns:base="clr-namespace:Hymperia.Facade.BaseClasses" prism:ViewModelLocator.AutoWireViewModel="True">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="50" />
      <RowDefinition Height="50" />
    </Grid.RowDefinitions>
    <ListBox Name="MateriauxSelectionListeBox" ItemsSource="{Binding Formes, Mode=OneWay}" SelectedValuePath="Value"
        SelectedValue="{Binding RegionContext, RelativeSource={RelativeSource AncestorType={x:Type base:RegionContextAwareUserControl}}}"
        SelectionMode="Single" BorderBrush="Black" Background="AliceBlue">
    </ListBox>
    <Grid Grid.Row="1">
      <Border BorderBrush="Black" BorderThickness="1" />
      <Label Content="Prix total :" FontSize="25" />
    </Grid>
    <Grid Grid.Row="2">
      <Border BorderBrush="Black" BorderThickness="1" />
      <Label Name="PrixAnalysePrixTotal" Content="UnPrix" FontSize="25" HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center" Grid.Row="1" />
      <!--Content="{Binding PrixTotal}"-->
    </Grid>
  </Grid>

</base:RegionContextAwareUserControl>

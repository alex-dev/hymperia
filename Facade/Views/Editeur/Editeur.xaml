<UserControl x:Class="Hymperia.Facade.Views.Editeur.Editeur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True">
  <Grid>
    <Menu>
      <MenuItem Command="{Binding Sauvegarder}" Header="Sauvegarder" />
    </Menu>
    <ContentControl prism:RegionManager.RegionName="ViewportRegion"
        prism:RegionManager.RegionContext="{Binding Path=., Mode=OneWay}" />
    <ContentControl prism:RegionManager.RegionName="SelectionModeRegion"
        prism:RegionManager.RegionContext="{Binding Path=SelectedSelectionMode, Mode=TwoWay}" />
    <ContentControl prism:RegionManager.RegionName="MateriauxSelectionRegion"
        prism:RegionManager.RegionContext="{Binding Path=SelectedMateriau, Mode=TwoWay}" />
    <ContentControl prism:RegionManager.RegionName="FormesSelectionRegion"
        prism:RegionManager.RegionContext="{Binding Path=SelectedForme, Mode=TwoWay}" />
    <ContentControl prism:RegionManager.RegionName="PrixAnalyseRegion"
        prism:RegionManager.RegionContext="{Binding Path=Projet, Mode=OneWay}" />
    <ContentControl prism:RegionManager.RegionName="FormesPropertiesRegion"
        prism:RegionManager.RegionContext="{Binding Path=FormesSelectionnees, Mode=OneWay}" />
  </Grid>
</UserControl>

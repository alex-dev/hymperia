<Window x:Class="Hymperia.Facade.Views.FenetrePrincipale" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True" Title="Hymperia">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="50" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <StackPanel Orientation="Horizontal" Grid.Row="0">
      <ComboBox ItemsSource="{Binding Projets}" SelectedItem="{Binding Projet}" />
      <Button Command="{Binding Navigate}" Content="Ouvrir" />
    </StackPanel>
    <ContentControl prism:RegionManager.RegionName="ContentRegion" Grid.Row="1" />
  </Grid>
</Window>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="White" />
  <SolidColorBrush x:Key="{x:Static SystemColors.MenuHighlightBrush}" Color="#FF6C0000" />
  <SolidColorBrush x:Key="{x:Static SystemColors.MenuHighlightBrushKey}" Color="#FF31AAB6" />
  <SolidColorBrush x:Key="{x:Static SystemColors.ActiveBorderBrush}" Color="#FF858585" />
  <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrush}" Color="#FF468EB8" />
  <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FFEBF7FF" />
  <SolidColorBrush x:Key="{x:Static SystemColors.GrayTextBrushKey}" Color="#FF878787" />
  <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="#FF0A0A0A" />
  <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrush}" Color="#FF0A0A0A" />
  <SolidColorBrush x:Key="{x:Static SystemColors.MenuTextBrush}" Color="#FF0A0A0A" />
  <SolidColorBrush x:Key="{x:Static SystemColors.InfoTextBrush}" Color="#FF0A0A0A" />
  <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrush}" Color="#FF0A0A0A" />
  <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="#FF0A0A0A" />
</ResourceDictionary>
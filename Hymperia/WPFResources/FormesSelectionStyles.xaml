<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:do="clr-namespace:Hymperia.Facade.DependencyObjects">
  <Style x:Key="FormeTextStyle" TargetType="{x:Type TextBlock}">
    <Setter Property="Text" Value="{Binding Key.Name}" />
    <Setter Property="Foreground" Value="DarkCyan" />
    <Setter Property="FontSize" Value="20" />
    <Setter Property="TextAlignment" Value="Center" />
    <Setter Property="VerticalAlignment" Value="Top" />
    <Setter Property="MaxHeight" Value="1000" />
    <Setter Property="Height" Value="100" />
    <Setter Property="Width" Value="190" />
    <Setter Property="MaxWidth" Value="300" />
    <Setter Property="Grid.Column" Value="1" />
    <Setter Property="Grid.ColumnSpan" Value="3" />
  </Style>
  <Style x:Key="FormeImageStyle" TargetType="{x:Type Image}">
    <Setter Property="do:ImageHelper.SourceResourceKey" Value="{Binding Value}" />
    <Setter Property="MaxHeight" Value="65" />
    <Setter Property="Height" Value="100" />
    <Setter Property="MaxWidth" Value="220" />
    <Setter Property="Width" Value="300" />
    <Setter Property="Grid.Column" Value="1" />
    <Setter Property="Grid.ColumnSpan" Value="2" />
    <Setter Property="Grid.Row" Value="2" />
    <Setter Property="Grid.RowSpan" Value="2" />
  </Style>
</ResourceDictionary>
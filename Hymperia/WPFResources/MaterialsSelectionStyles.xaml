<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="MaterialTextStyle" TargetType="{x:Type TextBlock}">
    <Setter Property="Foreground" Value="DarkCyan" />
    <Setter Property="FontSize" Value="25" />
    <Setter Property="TextAlignment" Value="Center" />
    <Setter Property="VerticalAlignment" Value="Top" />
    <Setter Property="MaxHeight" Value="1000" />
    <Setter Property="Height" Value="50" />
    <Setter Property="Width" Value="70" />
    <Setter Property="MaxWidth" Value="300" />
  </Style>
  <Style x:Key="MaterialRectangleStyle" TargetType="{x:Type Rectangle}">
    <Setter Property="Height" Value="150" />
    <Setter Property="Width" Value="150" />
  </Style>
  <Style x:Key="MaterialSelectionPanel" TargetType="{x:Type StackPanel}">
    
  </Style>
  <Style x:Key="MaterialSelection" TargetType="{x:Type ListBox}">
    <Setter Property="OverridesDefaultStyle" Value="True"/>
    <Setter Property="ItemContainerStyle" Value="{StaticResource MaterialSelectionPanel}"/>
  </Style>
</ResourceDictionary>
<UserControl x:Class="Hymperia.Facade.Views.Popups.EntitySuppressionPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:prop="clr-namespace:Hymperia.Facade.Properties" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="50" />
    </Grid.RowDefinitions>
    <ItemsControl ItemsSource="{Binding Content}" Margin="50" Grid.ColumnSpan="2" Grid.Row="0"
        HorizontalContentAlignment="Center" />
    <Button Click="Confirm" Content="{x:Static prop:Resources.Confirmer}" Grid.Column="0" Grid.Row="1" />
    <Button Click="Cancel" Content="{x:Static prop:Resources.Annuler}" Grid.Column="1" Grid.Row="1" />
  </Grid>
</UserControl>

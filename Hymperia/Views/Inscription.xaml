<UserControl x:Class="Hymperia.Facade.Views.Inscription"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prism="http://prismlibrary.com/"
    xmlns:prop="clr-namespace:Hymperia.Facade.Properties" prism:ViewModelLocator.AutoWireViewModel="True">
  <StackPanel Orientation="Vertical">
    <TextBlock Text="{x:Static prop:Resources.InvalidCredential}">
      <TextBlock.Style>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource ErrorTextBlock}">
          <Style.Triggers>
            <DataTrigger Binding="{Binding HasErrors, Mode=OneWay}" Value="False">
              <Setter Property="Visibility" Value="Collapsed" />
            </DataTrigger>
          </Style.Triggers>
        </Style>
      </TextBlock.Style>
    </TextBlock>
    <Label Target="{Binding ElementName=txtUsername}" Content="{x:Static prop:Resources._Utilisateur}" />
    <TextBox x:Name="txtUsername" Text="{Binding Username}" Validation.ErrorTemplate="{x:Null}" />
    <Label Target="{Binding ElementName=txtPassword}" Content="{x:Static prop:Resources._MotDePasse}" />
    <PasswordBox x:Name="txtPassword" PasswordChar="♦" />
    <Label Target="{Binding ElementName=txtVerification}" Content="{x:Static prop:Resources._VerificationMotDePasse}" />
    <PasswordBox x:Name="txtVerification" PasswordChar="♦" Tag="{Binding PasswordIsValid, ValidatesOnNotifyDataErrors=True}" PasswordChanged="OnPasswordChanged" />
    <Button Command="{Binding Inscription}" 
            CommandParameter="{Binding ., ElementName=txtPassword}"
            Content="{x:Static prop:Resources.Inscription}">
      </Button>
  </StackPanel>
</UserControl>

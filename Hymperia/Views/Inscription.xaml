<UserControl x:Class="Hymperia.Facade.Views.Inscription"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prism="http://prismlibrary.com/"
    xmlns:do="clr-namespace:Hymperia.Facade.DependencyObjects" xmlns:prop="clr-namespace:Hymperia.Facade.Properties"
    prism:ViewModelLocator.AutoWireViewModel="True">
  <StackPanel Orientation="Vertical">
    <Label Target="{Binding ElementName=txtUsername}" Content="{x:Static prop:Resources._Utilisateur}" />
    <TextBox x:Name="txtUsername" Text="{Binding Username, ValidatesOnDataErrors=True}" />
    <Label Target="{Binding ElementName=txtPassword}" Content="{x:Static prop:Resources._MotDePasse}" />
    <PasswordBox x:Name="txtPassword" PasswordChar="♦" />
    <Label Target="{Binding ElementName=txtVerification}" Content="{x:Static prop:Resources._VerificationMotDePasse}" />
    <PasswordBox x:Name="txtVerification" do:PasswordBoxHelper.Attach="True" do:PasswordBoxHelper.Password="{Binding Password, ValidatesOnDataErrors=True}"
        PasswordChar="♦" />
    <Button Command="{Binding Inscription}" CommandParameter="{Binding ., ElementName=txtPassword}"
        Content="{x:Static prop:Resources.Inscription}">
      <Button.Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
          <Style.Triggers>
            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=txtUsername}" Value="True">
              <Setter Property="IsEnabled" Value="False" />
            </DataTrigger>
            <DataTrigger Binding="{Binding (Validation.HasError), ElementName=txtVerification}" Value="True">
              <Setter Property="IsEnabled" Value="False" />
            </DataTrigger>
          </Style.Triggers>
        </Style>
      </Button.Style>
    </Button>
  </StackPanel>
</UserControl>

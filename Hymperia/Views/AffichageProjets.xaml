<UserControl x:Class="Hymperia.Facade.Views.AffichageProjets"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:prism="http://prismlibrary.com/" prism:ViewModelLocator.AutoWireViewModel="True">
  <StackPanel>
    <ListBox x:Name="ListBox" ItemsSource="{Binding Projets, Mode=OneWay}"
        SelectionMode="{Binding SelectionMode, Mode=OneWay}">
      <i:Interaction.Triggers>
        <i:EventTrigger EventName="SelectionChanged">
          <i:InvokeCommandAction Command="{Binding NavigateToProjet}"
              CommandParameter="{Binding SelectedItem, ElementName=ListBox}" />
        </i:EventTrigger>
      </i:Interaction.Triggers>
    </ListBox>
  </StackPanel>
</UserControl>

<UserControl x:Class="Hymperia.Facade.Views.Editeur.PropertiesEditor.ConeEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prop="clr-namespace:Hymperia.Facade.Properties">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Label Target="{Binding ElementName=tbxH}" Content="{x:Static prop:Resources._Height}" Grid.Column="0" Grid.Row="0" />
    <TextBox x:Name="tbxH" Text="{Binding Hauteur, Mode=TwoWay, StringFormat={}{0:N}}" Grid.Column="1" Grid.Row="0" />
    <Label Target="{Binding ElementName=tbxRB}" Content="{x:Static prop:Resources.Radius_Base}" Grid.Column="0" Grid.Row="1" />
    <TextBox x:Name="tbxRB" Text="{Binding RayonBase, Mode=TwoWay, StringFormat={}{0:N}}" Grid.Column="1" Grid.Row="1" />
    <Label Target="{Binding ElementName=tbxRT}" Content="{x:Static prop:Resources.Radius_Top}" Grid.Column="0" Grid.Row="2" />
    <TextBox x:Name="tbxRT" Text="{Binding RayonTop, Mode=TwoWay, StringFormat={}{0:N}}" Grid.Column="1" Grid.Row="2" />
  </Grid>
</UserControl>

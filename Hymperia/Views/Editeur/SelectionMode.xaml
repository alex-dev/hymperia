<base:RegionContextAwareUserControl x:Class="Hymperia.Facade.Views.Editeur.SelectionMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prism="http://prismlibrary.com/"
    xmlns:base="clr-namespace:Hymperia.Facade.BaseClasses" xmlns:prop="clr-namespace:Hymperia.Facade.Properties"
    prism:ViewModelLocator.AutoWireViewModel="True">
  <ListBox SelectedValuePath="Tag" Style="{StaticResource RadioButtonList}"
      SelectedValue="{Binding RegionContext, Mode=OneWayToSource, RelativeSource={RelativeSource AncestorType={x:Type base:RegionContextAwareUserControl}}}">
    <ListBoxItem FontSize="20" Tag="{x:Static base:SelectionMode.Deplacement}" Selector.IsSelected="True"
        Content="{x:Static prop:Resources.Movement}" />
    <ListBoxItem FontSize="20" Tag="{x:Static base:SelectionMode.Transformation}"
        Content="{x:Static prop:Resources.Scaling}" />
  </ListBox>
</base:RegionContextAwareUserControl>
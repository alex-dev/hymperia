<do:DataUserControl x:Class="Hymperia.Facade.Views.Editeur.PropertiesEditeur.EllipsoideEditeur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:do="clr-namespace:Hymperia.Facade.DependencyObjects"
    xmlns:prop="clr-namespace:Hymperia.Facade.Properties" DataContext="{Binding RelativeSource={RelativeSource Self}}">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Label Target="{Binding ElementName=tbxX}" Content="{x:Static prop:Resources.Radius_X}" Grid.Column="0" Grid.Row="0" />
    <TextBox x:Name="tbxX" Text="{Binding Data.RayonX, Mode=TwoWay, StringFormat={}{0:N}}" Grid.Column="1" Grid.Row="0" />
    <Label Target="{Binding ElementName=tbxY}" Content="{x:Static prop:Resources.Radius_Y}" Grid.Column="0" Grid.Row="1" />
    <TextBox x:Name="tbxY" Text="{Binding Data.RayonY, Mode=TwoWay, StringFormat={}{0:N}}" Grid.Column="1" Grid.Row="1" />
    <Label Target="{Binding ElementName=tbxZ}" Content="{x:Static prop:Resources.Radius_Z}" Grid.Column="0" Grid.Row="2" />
    <TextBox x:Name="tbxZ" Text="{Binding Data.RayonZ, Mode=TwoWay, StringFormat={}{0:N}}" Grid.Column="1" Grid.Row="2" />
  </Grid>
</do:DataUserControl>

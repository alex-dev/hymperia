<do:DataUserControl x:Class="Hymperia.Facade.Views.Editeur.PropertiesEditeur.PositionEditeur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:do="clr-namespace:Hymperia.Facade.DependencyObjects"
    xmlns:prop="clr-namespace:Hymperia.Facade.Properties" DataContext="{Binding RelativeSource={RelativeSource Self}}">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <TextBox
        do:MaskingBehavior.Mask="\{[+-]?\d+[.,]?\d*([Ee][+-]?\d+);[+-]?\d+[.,]?\d*([Ee][+-]?\d+);[+-]?\d+[.,]?\d*([Ee][+-]?\d+)\}"
    <!--<Button Content="{x:Static prop:Resources.Position}" Grid.Column="0" />-->
    <Button Content="{x:Static prop:Resources.Rotation}" Grid.Column="1" />
  </Grid>
</do:DataUserControl>

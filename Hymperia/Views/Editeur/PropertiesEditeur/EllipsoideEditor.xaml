<UserControl x:Class="Hymperia.Facade.Views.Editeur.PropertiesEditor.EllipsoideEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prop="clr-namespace:Hymperia.Facade.Properties">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Label Target="{Binding ElementName=tbxX}" Content="{x:Static prop:Resources.Radius_X}" Grid.Column="0" Grid.Row="0" />
    <TextBox x:Name="tbxX" Text="{Binding RayonX, Mode=TwoWay, StringFormat={}{0:N}}" Grid.Column="1" Grid.Row="0" />
    <Label Target="{Binding ElementName=tbxY}" Content="{x:Static prop:Resources.Radius_Y}" Grid.Column="0" Grid.Row="1" />
    <TextBox x:Name="tbxY" Text="{Binding RayonY, Mode=TwoWay, StringFormat={}{0:N}}" Grid.Column="1" Grid.Row="1" />
    <Label Target="{Binding ElementName=tbxZ}" Content="{x:Static prop:Resources.Radius_Z}" Grid.Column="0" Grid.Row="2" />
    <TextBox x:Name="tbxZ" Text="{Binding RayonZ, Mode=TwoWay, StringFormat={}{0:N}}" Grid.Column="1" Grid.Row="2" />
  </Grid>
</UserControl>

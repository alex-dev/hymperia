<UserControl x:Class="Hymperia.Facade.Views.Editeur.MateriauxSelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:prism="http://prismlibrary.com/"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" prism:ViewModelLocator.AutoWireViewModel="True">
  <ListBox x:Name="ListBox" ItemsSource="{Binding Materiaux, Mode=OneWay, NotifyOnTargetUpdated=True}"
      SelectedValuePath="Materiau" SelectedValue="{Binding SelectedMateriau, Mode=TwoWay}" SelectionMode="Single">
    <ListBox.ItemTemplate>
      <DataTemplate>
        <VirtualizingStackPanel>
          <TextBlock Text="{Binding Nom}" />
          <Rectangle Fill="{Binding Fill}" />
        </VirtualizingStackPanel>
      </DataTemplate>
    </ListBox.ItemTemplate>
  </ListBox>
</UserControl>

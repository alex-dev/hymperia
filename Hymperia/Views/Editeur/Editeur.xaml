<UserControl x:Class="Hymperia.Facade.Views.Editeur.Editeur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prism="http://prismlibrary.com/"
    xmlns:base="clr-namespace:Hymperia.Facade" xmlns:const="clr-namespace:Hymperia.Facade.Constants"
    xmlns:prop="clr-namespace:Hymperia.Facade.Properties" prism:ViewModelLocator.AutoWireViewModel="True">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="3.2*" />
      <ColumnDefinition Width="13*" />
      <ColumnDefinition Width="4*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="50" />
      <RowDefinition Height="5*" />
      <RowDefinition Height="7*" />
      <RowDefinition Height="10*" />
      <RowDefinition Height="200" />
    </Grid.RowDefinitions>
    <Menu Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" HorizontalAlignment="Center"
        HorizontalContentAlignment="Center">
      <MenuItem Command="{Binding Sauvegarder}" Header="{x:Static prop:Resources.Save}" Grid.Row="0" Grid.Column="0" />
    </Menu>
    <ListBox Style="{StaticResource RadioButtonList}" SelectedValuePath="Tag"
        SelectedValue="{Binding SelectedSelectionMode, Mode=OneWayToSource}" Grid.Column="0" Grid.Row="1">
      <ListBoxItem FontSize="20" Tag="{x:Static base:SelectionMode.Deplacement}"
          Content="{x:Static prop:Resources.Movement}" Selector.IsSelected="True" />
      <ListBoxItem FontSize="20" Tag="{x:Static base:SelectionMode.Transformation}"
          Content="{x:Static prop:Resources.Scaling}" />
    </ListBox>
    <ContentControl prism:RegionManager.RegionName="{x:Static const:RegionKeys.ViewportRegion}" Grid.Column="1"
        Grid.Row="2" Grid.RowSpan="3" />
    <ContentControl prism:RegionManager.RegionName="{x:Static const:RegionKeys.FormesSelectionRegion}" Grid.Column="1"
        Grid.ColumnSpan="2" Grid.Row="1" />
    <ContentControl prism:RegionManager.RegionName="{x:Static const:RegionKeys.MateriauxSelectionRegion}"
        Grid.Column="0" Grid.Row="2" Grid.RowSpan="3" />
    <ContentControl prism:RegionManager.RegionName="{x:Static const:RegionKeys.ProjetAnalyseRegion}" Grid.Column="2"
        Grid.Row="2" Grid.RowSpan="2" />
    <ContentControl prism:RegionManager.RegionName="{x:Static const:RegionKeys.FormesPropertiesRegion}" Grid.Column="2"
        Grid.Row="4" />
  </Grid>
</UserControl>

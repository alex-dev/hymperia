<UserControl x:Class="Hymperia.Facade.Views.Editeur.Editeur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="3.2*"/>
      <ColumnDefinition Width="13*"/>
      <ColumnDefinition Width="4*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="50" />
      <RowDefinition Height="5*" />
      <RowDefinition Height="7*" />
      <RowDefinition Height="10*" />
      <RowDefinition Height="200" />
    </Grid.RowDefinitions>
    <Menu Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" HorizontalAlignment="Center"
        HorizontalContentAlignment="Center">
      <MenuItem Command="{Binding Sauvegarder}" Header="Sauvegarder" Grid.Row="0" Grid.Column="0" />
    </Menu>
    <ContentControl prism:RegionManager.RegionName="ViewportRegion"
        prism:RegionManager.RegionContext="{Binding ., Mode=OneWay}" Grid.Column="1" Grid.Row="2" Grid.RowSpan="3" />
    <ContentControl prism:RegionManager.RegionName="SelectionModeRegion"
        prism:RegionManager.RegionContext="{Binding SelectedSelectionMode, Mode=OneWayToSource}" Grid.Column="0"
        Grid.Row="1" />
    <ContentControl prism:RegionManager.RegionName="MateriauxSelectionRegion"
        prism:RegionManager.RegionContext="{Binding SelectedMateriau, Mode=OneWayToSource}" Grid.Column="0"
        Grid.Row="2" Grid.RowSpan="3" />
    <ContentControl prism:RegionManager.RegionName="FormesSelectionRegion"
        prism:RegionManager.RegionContext="{Binding SelectedForme, Mode=OneWayToSource}" Grid.Column="1"
        Grid.ColumnSpan="2" Grid.Row="1" />
    <ContentControl prism:RegionManager.RegionName="PrixAnalyseRegion"
        prism:RegionManager.RegionContext="{Binding ., Mode=OneWay}" Grid.Column="2" Grid.Row="2"
        Grid.RowSpan="2" />
    <ContentControl prism:RegionManager.RegionName="FormesPropertiesRegion"
        prism:RegionManager.RegionContext="{Binding FormesSelectionnees, Mode=OneWay}" Grid.Column="2" Grid.Row="4" />
  </Grid>
</UserControl>

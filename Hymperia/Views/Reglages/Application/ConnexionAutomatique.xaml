<UserControl x:Class="Hymperia.Facade.Views.Reglages.Application.ConnexionAutomatique"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:prism="http://prismlibrary.com/"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:do="clr-namespace:Hymperia.Facade.DependencyObjects"
    xmlns:prop="clr-namespace:Hymperia.Facade.Properties" prism:ViewModelLocator.AutoWireViewModel="True">
  <StackPanel Orientation="Vertical">
    <TextBlock Text="{x:Static prop:Resources.ConnexionAutomatique}" />
    <ComboBox IsEditable="False" SelectedIndex="{Binding Selectionne}">
      <ComboBoxItem Foreground="Red" Content="{x:Static prop:Resources.Non}"></ComboBoxItem>
      <ComboBoxItem Foreground="Green" Content="{x:Static prop:Resources.Oui}"></ComboBoxItem>
    </ComboBox>
  </StackPanel>
</UserControl>

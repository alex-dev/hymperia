<UserControl x:Class="Hymperia.Facade.Views.Reglages.Application.ConnexionAutomatique"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:prism="http://prismlibrary.com/"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:prop="clr-namespace:Hymperia.Facade.Properties"
        prism:ViewModelLocator.AutoWireViewModel="True">
  <StackPanel Orientation="Vertical">
    <TextBlock Text="{x:Static prop:Resources.ConnexionAutomatique}" />
    <ComboBox x:Name="ConnexionAutomatiqueComboBox" IsReadOnly="True">
      <ComboBoxItem Content="{x:Static prop:Resources.Non}" />
      <ComboBoxItem Content="{x:Static prop:Resources.Oui}" IsSelected="{Binding Selectionne}" />
    </ComboBox>
  </StackPanel>
</UserControl>
